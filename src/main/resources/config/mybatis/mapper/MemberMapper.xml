<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.MemberMapper">
    <select id="auth" parameterType="memberDTO" resultType="memberDTO">
        SELECT * FROM member
        WHERE username = #{username}
        AND
        password = #{password}
    </select>
    <select id="validate" parameterType="string" resultType="memberDTO">
        SELECT * FROM member
        WHERE username = #{username}
    </select>
    <insert id="register" parameterType="memberDTO">
        INSERT INTO member(username, password, nickname)
        VALUES(#{username}, #{password}, #{nickname})
    </insert>
    <select id="selectAll" resultType="memberDTO">
        SELECT * FROM member
    </select>
    <select id="selectOne" resultType="memberDTO" parameterType="int">
        SELECT * FROM member
        WHERE id = #{id}
    </select>
    <update id="update" parameterType="memberDTO">
        UPDATE member
        SET
        password = #{password},
        nickname = #{nickname}
        WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM member
        WHERE id = #{id}
    </delete>
</mapper>